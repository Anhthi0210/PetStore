
@model PagedList.IPagedList<PetStore.Models.SANPHAM>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/CSS/BT.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
}
<h2></h2>
<div class="row">
        @foreach (var item in Model)
        {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" >
                        <div class="container bootdey">
                            <div class="product-list">
                                <div class="col-md-7">
                                    <div class="card border-dark mb-3" style="max-width: 15rem;">
                                        <section class="panel">
                                            <div class="pro-img-box">
                                                <img src="@item.Hinh" alt="" />
                                            </div>
                                            <div class="xemthem ">
                                                <div class="DatMua"  style="display: inline-block; justify-content: flex-end">
                                                    <a title="Đặt hàng" class="btn-add-cat btn btn-outline-secondary fa fa-shopping-cart text-black " href="@Url.Action("ThemGioHang", "GioHang",
                                                    new { @id = item.MaSP, @strURL = Request.Url.ToString() })"></a>
                                                </div>
                                                <div title="Xem chi tiết" class="detail" style="display: inline-block; justify-content: flex-end">
                                                    <a class="btn-details-item btn btn-outline-secondary fa fa-eye text-black" href="@Url.Action("Detail", "DanhSachSanPham",
                                                    new { @id = item.MaSP, @strURL = Request.Url.ToString() })"></a>
                                                </div>
                                            </div>                                     
                                            <div class="panel-body text-center">
                                                <h4>
                                                    <a href="" class="pro-title">
                                                        @item.TenSP
                                                    </a>
                                                </h4>
                                                <p class="price"><b>@String.Format("{0:#,##0.000}", item.DonGia) VNĐ</b></p>
                                            </div>
                                        </section>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>       
        }    
</div>
<div>
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new
        {
            page = page
       }))
    </div>
</div>
<style>
    .pro-title {
        overflow: hidden;
        display: block;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
    }

    .MenuTrang li {
        display: inline;
    }

    .MenuTrang {
        margin: 1rem 0;
        display: flex;
        justify-content: center;
    }

    #mau-nut a {
        clear: both;
        background-color: orange;
        color: snow;
    }

        #mau-nut a:hover {
            background-color: darkcyan;
            color: snow;
        }

    .pagination li a {
        color: darkcyan;
        border: 1px solid #808080;
        padding: 10px 20px;
    }
</style>
