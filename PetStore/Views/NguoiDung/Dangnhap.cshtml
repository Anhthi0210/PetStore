@model PetStore.Models.KHACHHANG
<!DOCTYPE html>
<html lang="vi">
@{
    ViewBag.Title = "Dangnhap";
    Layout = null;
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/CSS/BT.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
}
<body1>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg-light text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-5 mt-md-4 pb-5">

                                    <h2 class="title-form text-dark">MeMeow Store</h2>
                                    <p class="text-dark mb-5">Find the best for your pets!</p>
                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label text-dark" for="">Tên Đăng nhập</label>
                                        <input type="" name="TenDN" id="" class="form-control form-text" placeholder="Username" required />
                                        <label class="text-danger">@ViewData["ErrorAccount"]</label>
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label-sm text-dark" for="typePasswordX">Mật khẩu</label>
                                        <input type="password" name="MatKhau" id="typePasswordX" class="form-control form-text form" placeholder="Password" required />
                                        <label class="text-danger">@ViewData["ErrorPass"]</label>
                                    </div>

                                    <p class="small mb-5 pb-lg-2"><a class="text-dark" href="/NguoiDung/Quenmatkhau">Quên mật khẩu?</a></p>

                                    <button class="btn btn-login btn-lg px-5" type="submit">
                                        <b>LOGIN</b>
                                    </button>

                                    <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                        <a href="#!" class="text-white btn text-bg-primary "><i class="fab fa-facebook-f fa-lg"></i></a>
                                        <a href="#!" class="text-white btn text-bg-info"><i class="fab fa-twitter fa-lg "></i></a>
                                        <a href="#!" class="text-white btn text-bg-danger"><i class="fab fa-google fa-lg"></i></a>
                                    </div>

                                </div>

                                <div>
                                    <p class="mb-0 text-dark">
                                        Don't have an account? <a href="/NguoiDung/Dangky" class="text-dark fw-bold text-decoration-underline">Sign Up</a>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body1>
</html>
<style>
    /*.gradient-custom {*/
    /* fallback for old browsers */
    /*background: #6a11cb;*/
    /* Chrome 10-25, Safari 5.1-6 */
    /*background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));*/
    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    /*background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))*/
    /*}*/
    .gradient-custom {
        position: relative;
        width: 100%;
        height: 100vh;
        background: linear-gradient(to right, #7286D3, #8EA7E9, #E5E0FF, #FFF2F2);
    }

        .gradient-custom::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            background: inherit;
            clip-path: circle(150px at calc(50% + 100px) calc(50% + 100px)) circle(250px at calc(50% - 100px) calc(50% - 100px)) square(200px at calc(50% + 100px) calc(50% - 100px)) square(150px at calc(50% - 100px) calc(50% + 100px));
        }

    .btn-login {
        /* Thiết lập background gradient */
        background: linear-gradient(to right, #7286D3, #8EA7E9, #E5E0FF, #FFF2F2);
        /* Thiết lập kích thước, padding và margin cho button */
        width: 200px;
        height: 50px;
        padding: 10px 20px;
        margin: 10px;
        /* Thiết lập font chữ và màu chữ cho button */
        font-family: Arial, sans-serif;
        color: #19376D;
        font-weight: bold;
        /* Thiết lập đường viền cho button */
        border: none;
        /* Thiết lập hiệu ứng transition cho background, kích thước và độ mờ */
        transition: background-color 0.5s, transform 0.5s, filter 0.5s;
    }

        .btn-login:hover {
            /* Thiết lập background gradient tối hơn khi hover */
            background: linear-gradient(to right, #5B6EAB, #7583C7, #C1B8E3, #F0D7D7);
            /* Thiết lập hiệu ứng phóng to khi hover */
            transform: scale(1.1);
            /* Thiết lập độ mờ khi hover */
            filter: brightness(90%);
        }
    .d-flex a {
        margin-right: 7px;
    }
</style>





