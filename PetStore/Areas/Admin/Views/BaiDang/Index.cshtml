@model IEnumerable<PetStore.Models.BAIDANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link href="~/Areas/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Areas/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        })
    </script>
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card pt-2">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-8  text-black">
                        <strong>DANH SÁCH BÀI ĐĂNG</strong>
                    </div>
                    <div class="col-md-4 text-black text-right">
                        <a class=" btn-create btn btn-sm" href="@Url.Action("Create","BaiDang")"> Thêm</a>
                        <a class=" btn-delete btn btn-sm" href="@Url.Action("Delete","BaiDang")"> Xóa</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table id="myTable" class="table table-bordered table-hover table-striped ">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.TAIKHOAN.TenDangNhap)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TieuDe)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NgayDang)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hinh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoiDung)
                            </th>
                            <th>
                                Chức năng
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TAIKHOAN.TenDangNhap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayDang)
                                </td>
                                <td>
                                    <img src="@item.Hinh" alt="HinhPost" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoiDung)
                                </td>
                                <td>
                                    <a class=" btn btn-sm btn-default fa fa-eye " href="@Url.Action("Details","BaiDang",new { id = item.MaBD })"></a>
                                    <a class=" btn btn-sm btn-info fa fa-edit " href="@Url.Action("Edit","BaiDang",new { id = item.MaBD })"></a>
                                    <a class=" btn btn-sm btn-delete fa fa-trash-alt" href="@Url.Action("Delete","BaiDang",new { id = item.MaBD })"></a>

                                    @*@Html.ActionLink("Sửa", "Edit", new { id = item.MaDM }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaDM })*@
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->

</div>
<!-- /.content-wrapper -->


