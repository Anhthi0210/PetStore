@model PetStore.Models.BAIDANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card pt-2">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-8  text-black">
                        <strong>CHI TIẾT BÀI ĐĂNG</strong>
                    </div>
                    <div class="col-md-4 text-black text-right">
                        <a class=" btn-back btn btn-sm" href="@Url.Action("Index","BaiDang")"> Trở về</a>
                        <a class=" btn-default btn btn-sm" href="@Url.Action("Edit", "BaiDang", new { id = Model.MaBD })">Chỉnh sửa</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="w-25">Tên trường</th>
                            <th>Nội dung</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.TAIKHOAN.MatKhau)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.TAIKHOAN.MatKhau)
                            </td>
                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.TieuDe)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.TieuDe)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.NgayDang)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.NgayDang)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Hinh)
                            </td>

                            <td>
                                <img src="@Model.Hinh" alt="HinhPost" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.NoiDung)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.NoiDung)
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
