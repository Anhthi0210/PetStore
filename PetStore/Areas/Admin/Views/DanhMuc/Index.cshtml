@model IEnumerable<PetStore.Models.DANHMUC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    <link href="~/CSS/Admin.css" rel="stylesheet" />

}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card pt-2">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-8  text-black">
                        <strong>DANH MỤC SẢN PHẨM</strong>
                    </div>
                    <div class="col-md-4 text-black text-right">
                        <a class=" btn-create btn btn-sm" href="@Url.Action("Create","DanhMuc")"> Thêm</a>
                        <a class=" btn-delete btn btn-sm" href="@Url.Action("Delete","DanhMuc")"> Xóa</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table id="example1" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>

                            <th>
                                TÊN DANH MỤC
                                @*@Html.DisplayNameFor(model => model.TenDM)*@
                            </th>
                            <th>
                                Chức năng
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenDM)
                                </td>
                                <td>
                                    <a class=" btn btn-sm btn-default fa fa-eye " href="@Url.Action("Details","DanhMuc",new { id = item.MaDM })"></a>
                                    <a class=" btn btn-sm btn-info fa fa-edit " href="@Url.Action("Edit","DanhMuc",new { id = item.MaDM })"></a>
                                    <a class=" btn btn-sm btn-delete fa fa-trash-alt" href="@Url.Action("Delete","DanhMuc",new { id = item.MaDM })"></a>

                                    @*@Html.ActionLink("Sửa", "Edit", new { id = item.MaDM }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaDM })*@
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->

</div>
<!-- /.content-wrapper -->

