@model PetStore.Models.SANPHAM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card pt-2">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-8  text-black">
                            <strong class="text-danger">TIẾN HÀNH XÓA SẢN PHẨM</strong>
                        </div>
                        <div class="col-md-4 text-black text-right">
                            <a class=" btn-back btn btn-sm" href="@Url.Action("Index","SanPham")"> Trở về</a>
                            <button class="btn btn-sm btn-danger" type="submit" name="create">Xóa</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TenSP)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TenSP)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.DANHMUC.TenDM)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DANHMUC.TenDM)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.LOAIPET.TenLoaiPet)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LOAIPET.TenLoaiPet)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.NHACUNGCAP.TenNCC)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NHACUNGCAP.TenNCC)
                        </dd>



                        <dt>
                            @Html.DisplayNameFor(model => model.DonGia)
                        </dt>

                        <dd>
                            <p>@String.Format("{0:#,##0.000}", Model.DonGia) VNĐ</p> 
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.MoTa)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.MoTa)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.SoLuong)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SoLuong)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Hinh)
                        </dt>

                        <dd>
                            <img src="@Model.Hinh" alt="HinhSP" />
                        </dd>

                    </dl>
                </div>
                <!-- /.card-body -->

            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

}
