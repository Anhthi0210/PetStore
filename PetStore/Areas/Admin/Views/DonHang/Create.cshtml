                                    @Html.EditorFor(model => model.NgayGiaoHang, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", @Value = DateTime.Now.ToString("MM-dd-YYYYHH:mm") } })
                                    @Html.ValidationMessageFor(model => model.NgayGiaoHang, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
