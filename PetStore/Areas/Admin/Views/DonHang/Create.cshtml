                                *@                                <label>PTGH</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("MaPTGH", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.MaPTGH, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
